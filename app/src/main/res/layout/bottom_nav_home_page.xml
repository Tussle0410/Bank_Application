<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    android:background="@drawable/home_background_img">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="drawer"
                    android:textSize="30sp"
                    android:fontFamily="@font/login_font"
                    android:background="#00ff0000"
                    android:src="@drawable/home_drawer_icon"
                    android:id="@+id/drawer_button"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="이찬형"
                    android:fontFamily="@font/login_font"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:id="@+id/home_userName"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="님 어서오세요."
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:fontFamily="@font/login_font"
                    android:textColor="@color/black"/>
                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="#00ff0000"
                    android:layout_marginLeft="70dp"
                    android:id="@+id/home_notification"
                    android:src="@drawable/home_notification"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:background="@drawable/home_back_border"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:elevation="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="주 계좌정보"
                        android:textSize="20sp"
                        android:fontFamily="@font/login_font"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:textColor="@color/black"/>
                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="match_parent"/>
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="잔액"
                        android:checked="true"
                        android:fontFamily="@font/login_font"
                        android:textSize="20sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="351-0837-7492-03"
                    android:textSize="20sp"
                    android:textColor="#4F4ECF"
                    android:fontFamily="@font/login_font"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="100">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="60"
                        android:text="1000000"
                        android:gravity="right|center_vertical"
                        android:fontFamily="@font/login_font"
                        android:textSize="19sp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:text="원"
                        android:textSize="19sp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical|left"
                        android:fontFamily="@font/login_font"/>
                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:src="@drawable/home_money_refresh"
                        android:backgroundTint="@color/white"
                        android:background="#00ff0000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_margin="15dp">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="50"
                        android:backgroundTint="#4F4ECF"
                        android:elevation="10dp"
                        android:fontFamily="@font/login_font"
                        android:text="거래내역"
                        android:textSize="17sp"
                        app:strokeColor="@color/gray"
                        app:strokeWidth="2dp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="50"
                        android:backgroundTint="#4F4ECF"
                        android:elevation="10dp"
                        android:fontFamily="@font/login_font"
                        android:text="송금"
                        android:textSize="17sp"
                        app:strokeColor="@color/gray"
                        app:strokeWidth="2dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/home_back_border"
                android:layout_margin="20dp">
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp">
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/home_event_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <LinearLayout
                    android:id="@+id/home_event_indicator"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    app:layout_constraintTop_toTopOf="@id/home_event_viewpager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/home_drawer_page"/>
</androidx.drawerlayout.widget.DrawerLayout>