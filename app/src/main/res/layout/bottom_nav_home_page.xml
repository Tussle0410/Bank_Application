<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    android:background="@drawable/home_background_img">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="drawer"
                    android:textSize="30sp"
                    android:fontFamily="@font/login_font"
                    android:background="#00ff0000"
                    android:src="@drawable/home_drawer_icon"
                    android:id="@+id/drawer_button"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="이찬형"
                    android:fontFamily="@font/login_font"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:id="@+id/home_userName"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="님 어서오세요."
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:fontFamily="@font/login_font"
                    android:textColor="@color/black"/>
                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="#00ff0000"
                    android:layout_marginLeft="70dp"
                    android:id="@+id/home_notification"
                    android:src="@drawable/home_notification"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:background="@drawable/home_border"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:elevation="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/home_drawer_page"/>
</androidx.drawerlayout.widget.DrawerLayout>