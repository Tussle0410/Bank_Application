<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_img"
    android:orientation="vertical"
    android:weightSum="100">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="30"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:id="@+id/login_main_img"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:text="로그인"
        android:fontFamily="@font/login_font"
        android:textSize="50sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:text="ID"
        android:fontFamily="@font/login_font"
        android:paddingLeft="10dp"
        android:textSize="25sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:hint="아이디를 입력하세요"
        android:paddingLeft="10dp"
        android:background="@drawable/login_edit_button_border"
        android:layout_margin="5dp"
        android:id="@+id/login_ID_input"
        android:inputType="textCapSentences"
        android:fontFamily="@font/login_font" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:text="Password"
        android:fontFamily="@font/login_font"
        android:paddingLeft="10dp"
        android:textSize="25sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_margin="5dp"
        android:paddingLeft="10dp"
        android:inputType="textPassword"
        android:id="@+id/login_PW_input"
        android:background="@drawable/login_edit_button_border"
        android:hint="비밀번호를 입력하세요"
        android:fontFamily="@font/login_font"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
    android:layout_weight="5"
    android:orientation="horizontal"
    android:weightSum="100">
    <CheckBox
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="60"
        android:text="아이디 저장"
        android:layout_marginLeft="10dp"
        android:id="@+id/login_saveID_check"
        android:fontFamily="@font/login_font"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="40"
        android:layout_marginRight="15dp"
        android:text="비밀번호 찾기"
        android:fontFamily="@font/login_font"
        android:id="@+id/password_find_button"
        android:textColor="@color/gray"
        android:gravity="right"
        android:background="#00ff0000"
        android:backgroundTint="@color/white"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="15"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="7"
      android:orientation="horizontal"
      android:weightSum="100">
    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:text="회원가입"
        android:fontFamily="@font/login_font"
        android:textColor="@color/gray"
        android:gravity="center"
        android:backgroundTint="@color/white"
        android:background="#00ff0000"
        android:id="@+id/register_button"
        android:layout_marginRight="100dp"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_weight="50"
        android:backgroundTint="#4F4ECF"
        android:text="로그인"
        android:fontFamily="@font/login_font"
        android:id="@+id/login_button"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp" />
  </LinearLayout>

</LinearLayout>