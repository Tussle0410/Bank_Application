<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="받는 분 이메일"
        android:textSize="20sp"
        android:fontFamily="@font/login_font"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="받는 분 이메일을 정확히 입력해주세요."
        android:fontFamily="@font/login_font"
        android:id="@+id/remittance_receive_email"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:text="받는 분 이름"
            android:textSize="20dp"
            android:gravity="center"
            android:fontFamily="@font/login_font"
            android:textColor="@color/black" />
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/login_font"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/remittance_receive_name"
            android:hint="받는 분 이름"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="※ 받는 분 이메일과 이름이 일치해야 상대방이 송금된 금액을 받을 수 있습니다."
        android:fontFamily="@font/login_font"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="※ 받는 분 이름을 정확하게 명시해주어야 합니다."
        android:fontFamily="@font/login_font"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="확인"
        android:id="@+id/remittance_email_next"
        android:backgroundTint="@color/main_color"
        android:fontFamily="@font/login_font"
        android:textSize="25sp"/>

</LinearLayout>